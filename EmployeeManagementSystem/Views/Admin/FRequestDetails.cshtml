@model IEnumerable<Request>
@{
    ViewData["Title"]="List";
    Layout="_login";
}
<style>
    th,td{
        padding: 10px;
        text-align: center;
    }
    button{
        border:none ;
        background-color: rgb(161, 62, 194);
        border-radius: 7%;
    }
    label{
        margin-left: 380px;
        margin-top: 10px;
        width: 400px;
        font-weight: bold;
        font-size: xx-large
    }
</style>
<label>Request Details</label>
<table style="margin-left: 75%;">
    <tr>
        <td style="padding:33px"><form method="get" asp-action="RequestDetails" asp-controller="Admin"><button type="submit" style="margin-left: 90%;" >Pending</button></form></td>
        <td style= "padding:33px"><form method="get" asp-action="FRequestDetails" asp-controller="Admin"><button type="submit" style="background-color:white; border:solid 1px rgb(161, 62, 194)">Resolved</button></form></td>
    </tr>
</table>
<table border=3 class="table table-striped table-hover" style="margin-left: 90px;margin-top: 2px;min-width: 900px;max-width: 900px;">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Username</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Request request in Model){
            <tr>
                <td>@request.RequestID</td>
                <td>@request.Username</td>
                <td>@request.Description</td>
                <td>@request.Status</td>
            </tr>
        }
    </tbody>
</table>