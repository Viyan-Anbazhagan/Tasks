@model Project
@{
    Layout="_login";
}
<style>
    .headlabel{
        background-color: rgb(161, 62, 194) ;
        width: 9em;
        font-weight: bold;
        margin-left: 200px;
    }
    .datalabel{
        width: 9em;
    }
    center{
        margin-left:90px;
    }
    h1{
        margin-left: 400px;
        width: 400px;
        margin-top:10%;
    }
    td{
        padding: 30px;
    }
    button{
        border:none ;
        background-color: rgb(161, 62, 194);
        border-radius: 7%;
        margin-left: 450px;
        margin-top: 20px;
        height: 40px;
        width: 80px;
        font-weight: bold;
    }
</style>

<h1>New Project</h1>
<form method="post">
<center>
<table>
    <tr>
        <td>
            <label class="headlabel">Name </label>
        </td>
        <td>
            <input asp-for="Name" class="datalabel" required></input>
        </td>
    </tr>
    <tr>
        <td>
            <label class="headlabel">Deadline</label>
        </td>
        <td>
            <input type="date" id="date" name="date" asp-for="Deadline" onchange="mindate();" class="datalabel"></input>
            <script>
                $(function mindate() {
                    var dtToday = new Date();
                    var month = dtToday.getMonth() + 1;
                    var day = dtToday.getDate();
                    var year = dtToday.getFullYear();
                    if (month < 10)
                        month = '0' + month.toString();
                    if (day < 10)
                        day = '0' + day.toString();
                    var minDate = year + '-' + month + '-' + day;
                    $('#date').attr('min', minDate);
                });
            </script>
        </td>
    </tr>
    <tr>
        <td>
            <label class="headlabel">Manager</label>
        </td>
        <td>
           <input asp-for="Manager" class="datalabel" required></input>
        </td>
    </tr>
    <tr>
        <td>
            <label class="headlabel">SRS Document</label>
        </td>
        <td>
           <input style="width:40em;" type="file" asp-for="Document" accept=".pdf" required></input>
        </td>
    </tr>
</table>
</center>
<button type="submit">Register</button> 
</form>