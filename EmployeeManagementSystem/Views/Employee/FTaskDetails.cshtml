@model IEnumerable<Team>
@{
    ViewData["Title"]="List";
    Layout="_EmployeeLayout";
}
<style>
    th,td{
        padding: 10px;
        text-align: center;
    }
    button{
        border:none ;
        background-color: rgb(161, 62, 194);
        border-radius: 7%;
    }
    label{
        margin-left: 420px;
        margin-top: 10px;
        width: 400px;
        font-weight: bold;
        font-size: xx-large
    }
</style>
<label>Task Details</label>
<table style="margin-left: 81%;margin-top: -15px;">
    <tr>
        <td style="padding:33px"><form method="get" asp-action="TaskDetails" asp-controller="Employee"><button type="submit" style="width:80px;margin-left: 80%;" >Pending</button></form></td>
        <td style= "padding:33px"><form method="get" asp-action="FTaskDetails" asp-controller="Employee"><button type="submit" style="background-color:white; border:solid 1px rgb(161, 62, 194)">Completed</button></form></td>
    </tr>
</table>
<table border=3 class="table table-striped table-hover" style="margin-left: 90px;margin-top: -15px;min-width: 900px;max-width: 900px;">
    <thead>
        <tr>
            <th>Taskname</th>
            <th>Deadline</th>
            <th>Date of Completion</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Team task in Model){
            <tr>
                <td>@task.Taskname</td>
                <td>@task.Deadline</td>
                <td>@task.Dateofcompletion</td>
                <td>@task.Status</td>
            </tr>
        }
    </tbody>
</table>